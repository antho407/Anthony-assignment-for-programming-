//a program to find area and perimeter of a circle
# include <stdio.h>
#define PI 3.142
int main ()
{
    int r=14;
    float  area, perimeter;
    printf("enter the radius of a circle");
    scanf("%f",&r);
    area=3.142*r*r;
    perimeter= 2*3.142*r;
printf("the area of the circle is %f\n", area);
printf("the perimeter of the circle is %f\n", perimeter);
 return 0;

}


